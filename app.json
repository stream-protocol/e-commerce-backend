{
    "name": "StreamCommerce Server",
    "description": "A StreamCommerce Server deployed with Redis and Postgres Add-ons",
    "repository": "https://github.com/stream-protocol/e-commerce-backend",
    "logo": "https://i.imgur.com/dRSxCtW.png",
    "keywords": ["node", "express", "e-commerce", "streampay", "medusa", "e-commerce platform"],
    "success_url": "/store/products",
    "addons": [
      {
        "plan": "stackhero-redis",
        "as": "REDIS"
      },
      {
        "plan": "heroku-postgresql",
        "as": "DATABASE"
      }
    ],
    "env": {
      "JWT_SECRET": {
        "description": "Secret used to sign JWT tokens",
        "generator": "secret"
      },
      "COOKIE_SECRET": {
        "description": "Secret used to sign cookie SID",
        "generator": "secret"
      },
      "ADMIN_CORS": {
        "description": "URL of the Stream e-commerce admin",
        "required": false,
        "value": "http://localhost:7000,http://localhost:7001,https://admin.streampay.store"
      },
      "STORE_CORS": {
        "description": "URL of the StreamPay storefront",
        "required": false,
        "value": "http://localhost:8000,https://streampay.store"
      },
      "NPM_CONFIG_PRODUCTION": {
        "description": "Keep this false to allow the server to install babel for build",
        "required": true,
        "value": "false"
      }
    },
    "buildpacks": [
      {
        "url": "heroku/nodejs"
      }
    ]
  }
